@model IEnumerable<string>

<div class="sidebar-search">
    <h3>Seacrh:</h3>
    @using (Html.BeginForm("Search", "Product"))
    {
        <div class="input-group custom-search-form">
            <input type="text" class="form-control" name="name" placeholder="Search...">
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    }
    <!-- /input-group -->
</div>

<hr/>

<div class="list-group">
    <h3>Categories:</h3>
    @Html.ActionLink("Home", "List", "Product", null,
        new {@class = "list-group-item"})

    @foreach (var link in Model)
    {
        @Html.RouteLink(link, new
        {
            controller = "Product",
            action = "List",
            category = link,
            page = 1
        }, new
        {
            @class = "list-group-item" + (link == ViewBag.SelectedCategory ? " active" : "")

        })
    }

</div>
<hr/>

<div>
    <h3>Sort:</h3>
    <div class="radio">
        <label><input type="radio" name="optradio">Cheapest</label>
    </div>
    <div class="radio">
        <label><input type="radio" name="optradio">Expensive</label>
    </div>
</div>



<hr/>
<h3>Price:</h3>
<div id="priceSelector" class="row" style="display: none">
    <b>€ 10</b>
    <input id="ex2" type="text" class="span2" value="" data-slider-min="10" data-slider-max="1000" data-slider-step="5" data-slider-value="[250,450]" style="display: none"/>
    <b>€ 1000</b>
</div>


