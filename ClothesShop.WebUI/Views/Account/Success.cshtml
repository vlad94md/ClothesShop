@{
    ViewBag.Title = "Success";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <link href="~/Content/shop-homepage.css" rel="stylesheet" />
    <link href="~/Content/shop-item.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/7.0.2/css/bootstrap-slider.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-slider.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">

                    <a class="navbar-brand hidden-xs" href="@Url.Action("List", "Product")">Fashion Shop - The Latest Clothes and Fashion online</a>
                    <a class="navbar-brand visible-xs" href="#">Fashion Shop </a>
                </div>


                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container -->
        </nav>

        <div class="row panel">
            <div class="col-lg-12">
                <div class="panel col-lg-6 center-block" style="float: none;">
                    <div class="panel-heading">
                        <center>
                            <h3 class="text-success">You have been successfully registered!</h3>
                        </center>
                    </div>

                    <div class="panel-body">
                        <center><a href="@Url.Action("SignIn", "Account")" class="btn btn-primary">Sign In</a></center>
                    </div>
                </div>
            </div>

        </div>
    </div>


</body>
</html>
