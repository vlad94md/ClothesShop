@model ClothesShop.Domain.Entities.Cart


<p class="navbar-btn pull-right" style="margin-right: 10px">
    @Html.ActionLink("Proceed to checkout", "Index", "Cart",
        new {returnUrl = Request.Url.PathAndQuery},
        new {@class = "btn btn-default"})
</p>

<div class="pull-right navbar-text">
    <b>Your Cart:</b>
    @Model.Lines.Sum(x => x.Quantity) items,
    @Model.ComputeTotalValue().ToString("# eur")
</div>


